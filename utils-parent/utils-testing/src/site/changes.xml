<document xmlns="http://maven.apache.org/changes/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
  <properties>
    <title>Changelog</title>
    <author email="hannes.dohrn@informatik.uni-erlangen.de">Hannes Dohrn</author>
  </properties>
  <body>
    <release version="0.3.0" description="Feature release">
      <action dev="hdohrn" type="add">
        Enabled generation of a changes report.
      </action>
      <action dev="hdohrn" type="add">
        Added BuildInfo bean.
      </action>
      <action dev="hdohrn" type="add">
        Added NameAbbrevService.
      </action>
      <action dev="hdohrn" type="add">
        Added NamedParametrized JUnit test suite.
      </action>
      <action dev="hdohrn" type="add">
        Added ReflectionUtils helper class.
      </action>
      <action dev="hdohrn" type="add">
        getopt package can now load property files.
      </action>
      <action dev="hdohrn" type="add">
        getopt package supportes fixed configuration values.
      </action>
      <action dev="hdohrn" type="add">
        getopt package supports default values.
      </action>
      <action dev="hdohrn" type="add">
        Added test cases: TestXmlGrammar.
      </action>
      <action dev="hdohrn" type="fix">
        Extended helper class XmlGrammar and fixed UTF-16 issues in RE_XML_NAME_START_CHAR.
      </action>
      <action dev="hdohrn" type="fix">
        Moved test cases in TestStringUtils to correct package de.fau.cs.osr.utils.getopt -> de.fau.cs.osr.utils.
      </action>
      <action dev="hdohrn" type="fix" issue="12">
        mvn license:check fails under Windows.
      </action>
      <action dev="hdohrn" type="update">
        Deprecated ExceptionWrapper, use WrappedException instead.
      </action>
      <action dev="hdohrn" type="update">
        Enhanced test cases: TestOptions.
      </action>
      <action dev="hdohrn" type="remove">
        Removed the "dependencies" file since dependencies are now properly listed in the reports generated by maven.
      </action>
    </release>
    <release version="0.2.0.1" description="Preparing for deployment to maven central">
      <action dev="hdohrn" type="add">
        Enabled maven site generation, adding a site descriptor and some custom css.
      </action>
      <action dev="hdohrn" type="add">
        Added profiles for quick builds and GPG signing.
      </action>
      <action dev="hdohrn" type="fix">
         Fixed project URL: http://sweble.org/doc/site/tooling/utils
      </action>
      <action dev="hdohrn" type="update">
        Disabled mojo as release repository for dependencies and plugins.
      </action>
      <action dev="hdohrn" type="update">
        Added Dirk Riehle as project director.
      </action>
    </release>
    <release version="0.2.0" description="Initial release">
    </release>
  </body>
</document>

<!--
  Preferred order:
    New features
    Fixes
    Updates
  Then order by size/importance of features

  Tpyes:
    add: added functionnality to the project.
    fix: bug fix for the project.
    update: updated some part of the project.
    remove: removed some functionnality from the project.

  <action dev="hdohrn" type="fix">
  </action>
  -->
