module de.fau.cs.osr.ptk.nodegen.parser.JavaCode;

import de.fau.cs.osr.ptk.nodegen.parser.Whitespace;




// -----------------------------------------------------------------------------

transient
String
JavaCode =
  c:( Simple / Complex )*
  {
    StringBuilder b = new StringBuilder();
    for (; !c.isEmpty(); c = c.tail())
      b.append(c.head());
    yyValue = b.toString();
  }
;

private
transient
String
Simple =
    ( ![{}"'] !"/*" !"//" !Eol _ )+
  / ["] ( '\\' ["'] / '\\' / !["] !Eol _ )* ["]
  / ['] ( '\\' ["'] / '\\' / !['] !Eol _ )  [']
  / "//" ( !Eol _ )*
;

private
transient
String
Complex =
    '{' code:JavaCode '}'
    {
      yyValue = "{" + code + "}";
    }
  / "/*" c:( Newline / !"*/" _ )* "*/"
    {
      StringBuilder b = new StringBuilder();
      b.append("/*");
      for (; !c.isEmpty(); c = c.tail())
        b.append(c.head());
      b.append("*/");
      yyValue = b.toString();
    }
  / Newline
;

private
transient
String
Newline =
  eol:Eol " *" ' '? indent:' '*
  {
    int remain = indent.size() - yyState.getIndent();
    yyValue = eol;
    if (remain > 0)
      yyValue += StringUtils.strrep(' ', remain);
  }
;




